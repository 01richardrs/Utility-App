<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".network">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:visibility="invisible"/>
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/pics"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network :  "
            />
        <TextView
            android:textSize="25dp"
            android:id="@+id/Net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile / Wifi"
            />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network Status:  "
            />
        <TextView
            android:textSize="25dp"
            android:id="@+id/Net_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network Strength:  "
            />
        <TextView
            android:textSize="25dp"
            android:id="@+id/Net_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strength"
            />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Speed:  "
            />
        <TextView
            android:textSize="25dp"
            android:id="@+id/DL_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="in Kbs"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Speed:  "
            />
        <TextView
            android:textSize="25dp"
            android:id="@+id/UP_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="in Kbs"
            />
    </LinearLayout>

    <Button
        android:background="@color/colorPrimary"
        android:textColor="#E9F2F2"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/batons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingTop="8dp">
    <Button
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@color/colorPrimary"
                android:textColor="#E9F2F2"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/batonw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi Settings"
                />
    </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">
            <Button
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@color/colorPrimary"
                android:textColor="#E9F2F2"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/batonn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network Settings"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>